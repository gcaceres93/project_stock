<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="retencion_confirm">
            <field name="name">tesaka.retenciones.confirm.form</field>
            <field name="model">tesaka.retenciones.confirm</field>
            <field name="arch" type="xml">
                <form string="Vincular retenciones">
                    <p>Se realizará la vinculación de las facturas vinculadas, ¿Está seguro? </p>
                    <footer>
                        <button string="Confirm" name="retenciones_confirm" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <act_window
            name="Vincular retenciones"
            multi="True"
            res_model="tesaka.retenciones.confirm"
            src_model="tesaka.retenciones"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            id="action_retencion_confirm"/>
    </data>
</odoo>
